<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_btn">
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:paddingBottom">@dimen/material_size_atom</item>
        <item name="android:paddingLeft">@dimen/margin_common</item>
        <item name="android:paddingRight">@dimen/margin_common</item>
        <item name="android:paddingTop">@dimen/material_size_atom</item>
    </style>

    <!-- 无标题半透明对话框 -->
    <style name="dialog_transparent" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_marginRight">@dimen/material_size_atom</item>
        <item name="android:layout_marginLeft">@dimen/material_size_atom</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>